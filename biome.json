{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "useNodejsImportProtocol": "off"
      },
      "recommended": true
    }
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  },
  "files": {
    "include": [
      "./**/*.ts",
      "./**/*.js",
      "./**/*.cjs",
      "./**/*.mjs",
      "./**/*.jsx",
      "./**/*.tsx",
      "./**/*.d.ts",
      "./**/*.json",
      "./**/*.jsonc"
    ],
    "ignore": ["./node_modules", "./dist", ".astro"],
    "ignoreUnknown": true
  }
}
