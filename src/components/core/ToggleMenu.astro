---
import { Icon } from "astro-icon/components";

const {
  label = "Toggle Menu",
  class:
    className = "ml-1.5 light:text-gray-500 text-gray-400 light:hover:bg-gray-100 hover:bg-gray-800 focus:outline-none focus:ring-4 light:focus:ring-gray-200 focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center transition",
  iconClass = "w-6 h-6",
  iconName = "tabler:menu",
} = Astro.props;
---

<button type="button" class={className} aria-label={label} data-aw-toggle-menu>
  <Icon name={iconName} class={iconClass} />
</button>
