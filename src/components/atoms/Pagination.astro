---
import { Icon } from "astro-icon/components";
import { getPermalink } from "~/utils/permalinks";
const {
  prevUrl,
  nextUrl,
  prevText = "Newer posts",
  nextText = "Older posts",
} = Astro.props;
---

{
  (prevUrl || nextUrl) && (
    <div class="container flex">
      <div class="flex flex-row mx-auto container justify-between">
        <a
          href={getPermalink(prevUrl, "raw")}
          class={`inline-flex items-center justify-center rounded-full bg-transparent px-2 py-3.5 font-medium text-gray-400 hover:text-white hover:bg-gray-100 dark:text-slate-300 dark:hover:bg-slate-800 transition ease-in duration-200 cursor-pointer mr-2
      ${!prevUrl ? "invisible" : ""}`}
        >
          <div class="flex flex-row align-middle">
            <Icon name="tabler:arrow-left" class="w-6 h-6" />
            <p class="ml-2">{prevText}</p>
          </div>
        </a>
        <a
          href={getPermalink(nextUrl, "raw")}
          class={`inline-flex items-center justify-center rounded-full bg-transparent px-2 py-3.5 font-medium text-gray-400 hover:text-white hover:bg-gray-100 dark:text-slate-300 dark:hover:bg-slate-800 transition ease-in duration-200 cursor-pointer ${
            !nextUrl ? "invisible" : ""
          }`}
        >
          <div class="flex flex-row align-middle">
            <span class="mr-2">{nextText}</span>
            <Icon name="tabler:arrow-right" class="w-6 h-6" />
          </div>
        </a>
      </div>
    </div>
  )
}
