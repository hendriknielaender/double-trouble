---
import { AstroFont } from "astro-font";
---

<AstroFont
  config={[
    {
      src: [],
      name: "Inter",
      preload: false,
      display: "swap",
      fallback: "sans-serif",
      cssVariable: "aw-font-sans",
      googleFontsURL: "https://fonts.googleapis.com/css2?family=Inter",
    },
  ]}
/>

<style is:inline is:global>
  :root {
    --aw-font-serif: var(--aw-font-sans);
    --aw-font-heading: var(--aw-font-sans);
    --aw-color-primary: rgb(30 64 175);
    --aw-color-secondary: rgb(30 58 138);
    --aw-color-accent: rgb(109 40 217);
    --aw-color-text-page: rgb(17 24 39);
    --aw-color-text-muted: rgb(75 85 99);
    --aw-color-bg-page: rgb(255 255 255);
  }
</style>
