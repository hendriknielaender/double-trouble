---
import { Icon } from "astro-icon/components";
const { text, url, class: className = "inline-block" } = Astro.props;
---

<div class={className}>
  <span class="align-super font-bold">Share:</span>
  <button
    aria-label="twitter"
    class="ml-2"
    data-aw-social-share="twitter"
    data-aw-url={url}
    data-aw-text={text}
    ><Icon name="tabler:brand-twitter" class="w-6 h-6" />
  </button>
  <button
    aria-label="facebook"
    class="ml-2"
    data-aw-social-share="facebook"
    data-aw-url={url}
    ><Icon name="tabler:brand-facebook" class="w-6 h-6" />
  </button>
  <button
    aria-label="linkedin"
    class="ml-2"
    data-aw-social-share="linkedin"
    data-aw-url={url}
    data-aw-text={text}
    ><Icon name="tabler:brand-linkedin" class="w-6 h-6" />
  </button>
  <button
    aria-label="whatsapp"
    class="ml-2"
    data-aw-social-share="whatsapp"
    data-aw-url={url}
    data-aw-text={text}
    ><Icon name="tabler:brand-whatsapp" class="w-6 h-6" />
  </button>
  <button
    aria-label="mail"
    class="ml-2"
    data-aw-social-share="mail"
    data-aw-url={url}
    data-aw-text={text}
    ><Icon name="tabler:mail" class="w-6 h-6" />
  </button>
</div>
