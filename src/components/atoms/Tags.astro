---
import { getPermalink } from "~/utils/permalinks";

const { tags, enableTransition = false, class: className = "text-sm" } = Astro.props;
---

{
  tags && Array.isArray(tags) && (
    <ul class={className}>
      {tags.map((tag) => (
        <li class="bg-gray-100 dark:bg-slate-800 inline-block mr-2 mb-2 py-0.5 px-2 rounded-lg border-2 border-grey-100 dark:border-slate-600 hover:border-blue-500 dark:hover:border-blue-500">
          <a transition:name={enableTransition ? "tag"+tag : undefined} href={getPermalink(tag, "tag")}>{tag} ğŸ·</a>
        </li>
      ))}
    </ul>
  )
}
