---
import { SITE } from '~/config.mjs';
import { getCanonical, getHomePermalink } from '~/utils/permalinks';
import Layout from '~/layouts/PageLayout.astro';

import HighlightedPosts from '~/components/blog/HighlightedPosts.astro';

const meta = {
	title: SITE.title,
	description: SITE.description,
	canonical: getCanonical(getHomePermalink()),
};
---

<Layout {meta}>
     <div style="text-align:center">
        <br><br>
        Twice the fun, <i>double</i> the trouble.
        <br><br><br><br>
        ‚ö†Ô∏èThis page is under construction. ‚ö†
    </div>

    <div class="right-fist" data-scroll data-scroll-animation="animate">ü§ú</div>
    <div class="left-fist" data-scroll data-scroll-animation="animate">ü§õ</div>

    <script>
        window.addEventListener("scroll", ()=> {
            console.log("scrolling...");
            const scrollTop = window.pageYOffset || (document.documentElement || document.body.parentNode || document.body).scrollTop;
            if(scrollTop > 50){
                document.querySelector(".right-fist").classList.add("animate");
                document.querySelector(".left-fist").classList.add("animate");
            }
        });
    </script>

    <HighlightedPosts />
 </Layout>
